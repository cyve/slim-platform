{
    "name": "cyve/slim-platform",
    "description": "PHP micro framework for REST API based on Slim",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Cyril Vmd",
            "homepage": "https://cyve.github.io"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "middlewares/response-time": "^2.0",
        "doctrine/inflector": "^2.0"
    },
    "require-dev": {
        "symfony/var-dumper": "*",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "SlimPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
